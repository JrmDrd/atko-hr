<div class="modal-header">
    <h1 class="modal-title fs-5" id="exampleModalLabel">Onboard new employee</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form class="row g-3" id="addEmployee" action="http://localhost:3000/onboard-employee" method="post">
        <div class="col-md-6">
            <label for="inputFirstName" class="form-label">Firstname</label>
            <input type="text" class="form-control" name="inputFirstName" placeholder="John">
        </div>
        <div class="col-md-6">
            <label for="inputLasttName" class="form-label">Lastname</label>
            <input type="text" class="form-control" name="inputLastName" placeholder="Doe">
        </div>
        <div class="col-12">
            <label for="inputPosition" class="form-label">Position</label>
            <input type="text" class="form-control" name="inputPosition" placeholder="Director Manager Sales">
        </div>
        <label for="inputYear" class="form-label">Start date</label>
        <div class="col-md-4">
            <label for="inputYear" class="form-label">Year</label>
            <input type="text" class="form-control" name="inputYear" placeholder="2023">
        </div>
        <div class="col-md-6">
            <label for="inputMonth" class="form-label">Month</label>
            <select name="inputMonth" class="form-select">
                <option>January</option>
                <option>February</option>
                <option>March</option>
                <option>April</option>
                <option>May</option>
                <option>June</option>
                <option>July</option>
                <option>August</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="inputDay" class="form-label">Date</label>
            <input type="text" class="form-control" name="inputDay" placeholder="22">
        </div>
        <div class="col-12">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Continue</button>
        </div>
    </form>
</div>